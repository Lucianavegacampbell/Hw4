      <% else %>
      <div class="col-md-12 text-end"> 
        <a href="/login" class="btn btn-light">Login</a> |
        <a href="/users/new" class="btn btn-light me-2">Sign Up</a>
      </div> <% end %> 
      
  </ul>    
  
</nav>

   
    
     
  
</div> 
<div class="container">

